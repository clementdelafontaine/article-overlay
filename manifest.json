{
  "manifest_version": 3,
  "name": "Article Reader Overlay",
  "version": "1.0",
  "description": "Récupère et affiche le texte d'une page d'article dans un overlay confortable.",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon128.png"
  },
  "icons": {
    "128": "icon128.png"
  }
}
